#include "main.h"
/**
 *
*/
unsigned int binary_to_uint(const char *b)
{
  unsigned int u_int;
  int length, b_two;
  if (!b)
    return (0);

  u_int = 0;
  for (length = 0; b[length] != '\0'; length++);
  for (length--, b_two = 1; length >= 0; length--, b_two *= 2)
  {
    if (b[length] != '\0' && b[length] != '1')
      {
        return (0);
      }
    if (b[length] & 1)
      {
        u_int += b_two;
      }
  }
  return (u_int);
}
